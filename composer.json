{
    "name": "php-standard-library/psalm-plugin",
    "description": "Psalm plugin for the PHP Standard Library",
    "type": "psalm-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "azjezz",
            "email": "azjezz@protonmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "azjezz/psl": "^1.5",
        "vimeo/psalm": "^4.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Psl\\Psalm\\": "src/"
        }
    },
    "scripts": {
        "cs:fix": [
            "phpcbf",
            "php-cs-fixer fix"
        ],
        "cs:check": [
            "phpcs",
            "php-cs-fixer fix --dry-run"
        ],
        "type:check": "psalm",
        "type:coverage": "psalm --shepherd",
        "code:coverage": "php-coveralls -v",
        "security:analysis": "psalm --taint-analysis",
        "check": [
            "@cs:check",
            "@type:check",
            "@security:analysis"
        ]
    },
    "config": {
        "process-timeout": 1200,
        "sort-packages": true
    },
    "extra": {
        "psalm": {
            "pluginClass": "Psl\\Psalm\\Plugin"
        }
    }
}
